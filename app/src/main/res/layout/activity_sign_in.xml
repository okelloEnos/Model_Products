<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignIn">


    <TextView
        android:id="@+id/signInText"
        android:layout_width="wrap_content"
        android:layout_marginBottom="@dimen/forty_dp"
        app:layout_constraintBottom_toTopOf="@id/overallSignIn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="wrap_content"
        android:text="Validate Your Account By Filling All Fields..." />

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/overallSignIn"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/eight_dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/tvEmail_signIn"
                android:layout_width="@dimen/zero_dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/eight_dp"
                android:layout_marginLeft="@dimen/eight_dp"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:text="@string/email"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/etSignInMail"
                android:layout_weight="2"
                android:layout_width="@dimen/zero_dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/eight_dp"
                android:layout_marginRight="@dimen/eight_dp"
                android:ems="10"
                android:hint="@string/mailDemo"
                android:inputType="textPersonName" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/eight_dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvPassword_signIn"
                android:layout_width="@dimen/zero_dp"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_marginStart="@dimen/eight_dp"
                android:layout_marginLeft="@dimen/eight_dp"
                android:layout_weight="1"
                android:text="@string/tvPassword" />

            <EditText
                android:id="@+id/etPassword_signIn"
                android:layout_weight="2"
                android:layout_width="@dimen/zero_dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/eight_dp"
                android:layout_marginRight="@dimen/eight_dp"
                android:ems="10"
                android:inputType="textPassword" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/eight_dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvPhone_signIn"
                android:layout_width="@dimen/zero_dp"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_marginStart="@dimen/eight_dp"
                android:layout_marginLeft="@dimen/eight_dp"
                android:layout_weight="1"
                android:text="Phone No : " />

            <EditText
                android:id="@+id/etPhone_signIn"
                android:layout_weight="2"
                android:layout_width="@dimen/zero_dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/eight_dp"
                android:layout_marginRight="@dimen/eight_dp"
                android:ems="10"
                android:inputType="number" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Forgot Password ?"
        android:onClick="forgotPassWord"
        android:textSize="@dimen/twenty_four_sp"
        android:layout_marginTop="@dimen/forty_dp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintTop_toBottomOf="@id/overallSignIn"/>

    <Button
        android:id="@+id/registerBtn_signIn"
        android:layout_width="@dimen/zero_dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text=" Create Account "
        android:padding="@dimen/eight_dp"
        android:background="@drawable/normal_button"
        android:textColor="@color/black"
        android:layout_margin="@dimen/eight_dp"
        />
    <Button
        android:id="@+id/nextBtn_signIn"
        android:padding="@dimen/eight_dp"
        android:layout_width="@dimen/zero_dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Done"
        android:background="@drawable/normal_button"
        android:textColor="@color/black"
        android:layout_margin="@dimen/eight_dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>