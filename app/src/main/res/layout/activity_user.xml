<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user">

    <ImageView
        android:id="@+id/imageViewUserChoice"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/selection" />

    <TextView
        android:id="@+id/tvAccess"
        android:layout_width="@dimen/zero_dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/eight_dp"
        android:layout_marginLeft="@dimen/eight_dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="@dimen/eight_dp"
        android:layout_marginRight="@dimen/eight_dp"
        android:layout_marginBottom="@dimen/eight_dp"
        android:gravity="center_horizontal"
        android:text="@string/tvAccess"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/twenty_four_sp"
        app:layout_constraintTop_toBottomOf="@id/imageViewUserChoice"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buyerBtn"
        android:layout_width="@dimen/zero_dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/eighty_dp"
        android:layout_marginLeft="@dimen/eighty_dp"
        android:layout_marginTop="@dimen/forty_dp"
        android:layout_marginEnd="@dimen/eighty_dp"
        android:layout_marginRight="@dimen/eighty_dp"
        android:background="@drawable/round_btn"
        android:gravity="center_horizontal"
        android:padding="16dp"
        android:text="@string/tvBuyer"
        android:textColor="@color/white"
        android:textSize="@dimen/twenty_four_sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvAccess" />

    <Button
        android:id="@+id/sellerBtn"
        android:layout_width="@dimen/zero_dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/eighty_dp"
        android:layout_marginLeft="@dimen/eighty_dp"
        android:layout_marginTop="@dimen/forty_dp"
        android:layout_marginEnd="@dimen/eighty_dp"
        android:layout_marginRight="@dimen/eighty_dp"
        android:background="@drawable/round_btn"
        android:gravity="center_horizontal"
        android:padding="16dp"
        android:text="@string/tvSeller"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="@dimen/twenty_four_sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buyerBtn" />
</androidx.constraintlayout.widget.ConstraintLayout>