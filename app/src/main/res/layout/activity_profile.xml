    <ImageView
        android:id="@+id/imageViewProfile"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/ic_account"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/forty_dp"
        app:layout_constraintTop_toBottomOf="@id/profileToolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/eight_dp"
        android:layout_marginLeft="@dimen/eight_dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="@dimen/eight_dp"
        android:layout_marginRight="@dimen/eight_dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageViewProfile">

        <LinearLayout
            android:id="@+id/userNameLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/eight_dp"
            android:orientation="horizontal"
            android:weightSum="100">

            <TextView
                android:id="@+id/profileName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/eight_dp"
                android:layout_weight="40"
                android:text="User Name : "
                android:textColor="@color/black"
                android:textSize="@dimen/eighteen_sp" />

            <EditText
                android:id="@+id/dynamicProfileName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/eight_dp"
                android:layout_weight="60"
                android:enabled="false"
                android:text="User Name "
                android:textColor="@color/black"
                android:textSize="@dimen/eighteen_sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/emailProfileLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/eight_dp"
            android:orientation="horizontal"
            android:weightSum="100">

            <TextView
                android:id="@+id/profileMail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/eight_dp"
                android:layout_weight="30"
                android:text="E - Mail : "
                android:textColor="@color/black"
                android:textSize="@dimen/eighteen_sp" />

            <EditText
                android:id="@+id/dynamicProfileMail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/eight_dp"
                android:layout_weight="70"
                android:enabled="false"
                android:text="E - Mail "
                android:textColor="@color/black"
                android:textSize="@dimen/eighteen_sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/phoneProfileLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/eight_dp"
            android:orientation="horizontal"
            android:weightSum="100">

            <TextView
                android:id="@+id/profilePhone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/eight_dp"
                android:layout_weight="40"
                android:text="Phone No : "
                android:textColor="@color/black"
                android:textSize="@dimen/eighteen_sp" />

            <EditText
                android:id="@+id/dynamicProfilePhone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/eight_dp"
                android:layout_weight="60"
                android:enabled="false"
                android:text="Phone No "
                android:textColor="@color/black"
                android:textSize="@dimen/eighteen_sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/locationProfileLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/eight_dp"
            android:orientation="horizontal"
            android:weightSum="100">

            <TextView
                android:id="@+id/profileLocation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/eight_dp"
                android:layout_weight="55"
                android:text="Current Location : "
                android:textColor="@color/black"
                android:textSize="@dimen/eighteen_sp" />

            <EditText
                android:id="@+id/dynamicProfileLocation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/eight_dp"
                android:layout_weight="45"
                android:text="Location "
                android:enabled="false"
                android:textColor="@color/black"
                android:textSize="@dimen/eighteen_sp" />

        </LinearLayout>

<!--        <LinearLayout-->
<!--            android:id="@+id/locationProfileLayoutOk"-->
<!--            android:layout_width="match_parent"-->
