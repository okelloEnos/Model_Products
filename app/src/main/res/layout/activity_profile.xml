<!--                android:text="Current : "-->
<!--                android:textColor="@color/black"-->
<!--                android:textSize="@dimen/eighteen_sp" />-->

<!--            <EditText-->
<!--                android:id="@+id/dynamicProfileLocationOk"-->
<!--                android:layout_width="0dp"-->
<!--                android:layout_height="wrap_content"-->
